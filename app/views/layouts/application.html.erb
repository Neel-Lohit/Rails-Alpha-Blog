<!DOCTYPE html>
<html>
  <head>
    <title>TestApp6</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to "ALPHA BLOG", root_path, class: "navbar-brand", id: "logo" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        <li class="nav-item">
        <%= link_to "Bloggers", users_path, class: "nav-link" %>
        </li>
          <li class="nav-item active">
          <%= link_to 'Articles', articles_path, class: "nav-link"%> 
          </li>
          <li class="nav-item active">
          <%= link_to 'Categories', categories_path, class: "nav-link"%> 
          </li>
          <% if logged_in? %>
            <li class="nav-item">
            <%= "(Admin)" if current_user.admin? %> <%= link_to current_user.username, user_path(current_user), class: "nav-link"%> 
            </li>
            <li class="nav-item">
            <%= button_to 'logout', logout_path, class: "nav-link", method: :delete %> 
            </li>
          <%else%>
            <li class="nav-item">
            <%= link_to 'Log in', login_path, class: "nav-link"%> 
            </li>
            <li class="nav-item">
            <%= link_to 'Sign up', signup_path, class: "nav-link"%> 
            </li>
          <%end%>
          
      </div>
    </nav>

    <%= render 'layouts/messages' %>
    <%= yield %>
  </body>
</html>